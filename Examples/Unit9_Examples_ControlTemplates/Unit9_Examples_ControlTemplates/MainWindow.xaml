<Window x:Class="Unit9_Examples_ControlTemplates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unit9_Examples_ControlTemplates"
        mc:Ignorable="d"
        Title="Part 1 - Inspect Control Template" Height="450" Width="800">
    
    <StackPanel Margin="10">
        <Button x:Name="myButton" 
                Content="Click Me"
                Padding="10,7"
                HorizontalAlignment="Left">
        </Button>
        <TextBlock x:Name="myTextBlock" Text="This is some text"/>
    </StackPanel>
</Window>
