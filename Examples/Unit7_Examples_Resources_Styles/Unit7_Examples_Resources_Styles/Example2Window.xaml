<Window x:Class="Unit7_Examples_Resources_Styles.Example2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unit7_Examples_Resources_Styles"
        mc:Ignorable="d"
        Title="Example 2 - With Resources" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="ShipColor" Color="Thistle"/>
    </Window.Resources>
    
    <StackPanel Margin="10">
        <Button Content="Nina"
                Padding="10,7"
                Margin="10"
                HorizontalAlignment="Center"
                Background="{StaticResource ShipColor}"/>

        <Button Content="Pinta"
                Padding="10,7"
                Margin="10"
                HorizontalAlignment="Center"
                Background="{StaticResource ShipColor}"/>


        <Button Content="Santa Maria"
                Padding="10,7"
                Margin="10"
                HorizontalAlignment="Center"
                Background="{StaticResource ShipColor}"/>

    </StackPanel>
</Window>
