<Window x:Class="Unit7_Examples_Resources_Styles.Example1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unit7_Examples_Resources_Styles"
        mc:Ignorable="d"
        Title="Example 1 - Without Resources" Height="450" Width="800">
    
    <StackPanel Margin="10">
        <Button Content="Nina"
                Padding="10,7"
                Margin="10"
                HorizontalAlignment="Center"
                Background="Thistle"/>

        <Button Content="Pinta"
                Padding="10,7"
                Margin="10"
                HorizontalAlignment="Center">
            <Button.Background>
                Thistle
            </Button.Background>
        </Button>

        <Button Content="Santa Maria"
                Padding="10,7"
                Margin="10"
                HorizontalAlignment="Center">
            <Button.Background>
                <SolidColorBrush Color="Thistle"/>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
