<Window x:Class="Exercise_7_Resources_Styles_Solution.Part1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise_7_Resources_Styles_Solution"
        mc:Ignorable="d"
        Title="Part 1 - Define and Use Resource" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBackgroundColor" Color="Thistle"/>
    </Window.Resources>
    
    <StackPanel>
        <Button Content="Superior"
                HorizontalAlignment="Center"
                Padding="10,7"
                Margin="10"
                Background="{StaticResource ButtonBackgroundColor}"/>
        
        <Button Content="Michigan"
                HorizontalAlignment="Center"
                Padding="10,7"
                Margin="10"
                Background="{StaticResource ButtonBackgroundColor}"/>
    </StackPanel>
</Window>
